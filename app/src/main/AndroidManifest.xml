<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appier.aidealapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor">

        <!--Comment in the following line to test data collection is disabled for GDPR support-->
        <!--<meta-data android:name="apr_data_collection" android:value="false" />-->

        <activity android:name=".ui.cart.CartActivity" />
        <activity android:name=".ui.cart_form.CartFormActivity" />
        <activity android:name=".ui.cart_form.WebActivity" />
        <activity android:name=".ui.category.CategoryActivity" />
        <activity android:name=".ui.conversion.ConversionActivity" />
        <activity android:name=".ui.item.ItemActivity" />
        <activity android:name=".ui.my_page.MyPageActivity" />
        <activity android:name=".ui.top.TopActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
